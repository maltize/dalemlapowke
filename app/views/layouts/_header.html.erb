<% if notice %>
  <p class="notice"><%= notice %></p>
<% end %>
<% if alert %>
  <p class="alert"><%= alert %></p>
<% end %>

<div class="row header-section">
  <div class="span2">
    <%= link_to image_tag('rails.png'), root_path %>
  </div>
  <div class="span10">
    <%= form_tag(search_path, :method => :get, :class => 'form-search pull-right') do %>
      <%= text_field_tag :query, params[:query], :placeholder => "Szukana fraza", :class => "input-medium search-query" %>
      <%= submit_tag "Szukaj", :class => "btn" %>
    <% end %>

    <p>Chronimy <%= link_to 'Twoją prywatność', terms_path %></p>

    <h2>
      <%= link_to "Pokaż rozmiary korupcji,<br/>umieszczając anonimowo swoją historię!".html_safe, new_bribe_path %>
    </h2>
  </div>
</div>